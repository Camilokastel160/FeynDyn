We use the following identities:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\overline{|0\rangle\negmedspace\langle0|} & ={\rm e}^{V}|0\rangle\negmedspace\langle0|{\rm e}^{-V}\label{Tranformation of the element 00}\\
 & =\left(|0\rangle\negmedspace\langle0|B_{0+}+|1\rangle\negmedspace\langle1|B_{1+}\right)|0\rangle\negmedspace\langle0|\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =\left(|0\rangle\negmedspace\langle0|0\rangle\negmedspace\langle0|B_{0+}+|1\rangle\negmedspace\langle1|0\rangle\negmedspace\langle0|B_{1+}\right)\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =|0\rangle\negmedspace\langle0|0\rangle\negmedspace\langle0|B_{0+}\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =|0\rangle\negmedspace\langle0|B_{0+}\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =|0\rangle\negmedspace\langle0|0\rangle\negmedspace\langle0|B_{0+}B_{0-}+|0\rangle\negmedspace\langle0|1\rangle\negmedspace\langle1|B_{0+}B_{1-}\\
 & =|0\rangle\negmedspace\langle0|,\\
\overline{|1\rangle\negmedspace\langle1|} & =\left(|0\rangle\negmedspace\langle0|B_{0+}+|1\rangle\negmedspace\langle1|B_{1+}\right)|1\rangle\negmedspace\langle1|\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =\left(|0\rangle\negmedspace\langle0|1\rangle\negmedspace\langle1|B_{0+}+|1\rangle\langle1|1\rangle\negmedspace\langle1|B_{1+}\right)\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =|1\rangle\negmedspace\langle1|B_{1+}\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =|1\rangle\negmedspace\langle1|0\rangle\negmedspace\langle0|B_{1+}B_{0-}+B_{1+}|1\rangle\negmedspace\langle1|1\rangle\negmedspace\langle1|B_{1-}\\
 & =B_{1+}|1\rangle\negmedspace\langle1|1\rangle\negmedspace\langle1|B_{1-}\\
 & =|1\rangle\negmedspace\langle1|B_{1+}B_{1-}\\
 & =|1\rangle\negmedspace\langle1|,\\
\overline{|0\rangle\negmedspace\langle1|} & ={\rm e}^{V}|0\rangle\negmedspace\langle1|{\rm e}^{-V}\\
 & =\left(|0\rangle\negmedspace\langle0|B_{0+}+|1\rangle\negmedspace\langle1|B_{1+}\right)|0\rangle\negmedspace\langle1|\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =\left(|0\rangle\negmedspace\langle0|0\rangle\negmedspace\langle1|B_{0+}+|1\rangle\negmedspace\langle1|B_{1+}|0\rangle\negmedspace\langle1|\right)\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =\left(|0\rangle\negmedspace\langle0|0\rangle\negmedspace\langle1|B_{0+}+|1\rangle\negmedspace\langle1|0\rangle\negmedspace\langle1|B_{1+}\right)\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =|0\rangle\negmedspace\langle1|B_{0+}\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =|0\rangle\negmedspace\langle1|0\rangle\negmedspace\langle0|B_{0+}B_{0-}+|0\rangle\negmedspace\langle1|1\rangle\negmedspace\langle1|B_{0+}B_{1-}\\
 & =|0\rangle\negmedspace\langle1|B_{0+}B_{1-},\\
\overline{|1\rangle\negmedspace\langle0|} & ={\rm e}^{V}|1\rangle\negmedspace\langle0|{\rm e}^{-V}\\
 & =\left(|0\rangle\negmedspace\langle0|B_{0+}+|1\rangle\negmedspace\langle1|B_{1+}\right)|1\rangle\negmedspace\langle0|\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =\left(|0\rangle\negmedspace\langle0|1\rangle\negmedspace\langle0|B_{0+}+|1\rangle\negmedspace\langle1|B_{1+}|1\rangle\negmedspace\langle0|\right)\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =\left(|0\rangle\negmedspace\langle0|1\rangle\negmedspace\langle0|B_{0+}+|1\rangle\negmedspace\langle1|1\rangle\negmedspace\langle0|B_{1+}\right)\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =|1\rangle\negmedspace\langle0|B_{1+}\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =|1\rangle\negmedspace\langle0|B_{1+}|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle0|B_{1+}|1\rangle\negmedspace\langle1|B_{1-}\\
 & =|1\rangle\negmedspace\langle0|B_{1+}B_{0-}+|1\rangle\negmedspace\langle0|1\rangle\negmedspace\langle1|B_{1+}B_{1-}\\
 & =|1\rangle\negmedspace\langle0|B_{1+}B_{0-},\\
\overline{b_{\mathbf{k}}} & ={\rm e}^{V}b_{\mathbf{k}}{\rm e}^{-V}\\
 & =\left(|0\rangle\negmedspace\langle0|B_{0+}+|1\rangle\negmedspace\langle1|B_{1+}\right)b_{\mathbf{k}}\left(|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1-}\right)\\
 & =|0\rangle\negmedspace\langle0|B_{0+}b_{\mathbf{k}}B_{0-}|0\rangle\negmedspace\langle0|+|0\rangle\negmedspace\langle0|B_{0+}b_{\mathbf{k}}|1\rangle\negmedspace\langle1|B_{1-}+|1\rangle\negmedspace\langle1|B_{1+}b_{\mathbf{k}}|0\rangle\negmedspace\langle0|B_{0-}+|1\rangle\negmedspace\langle1|B_{1+}b_{\mathbf{k}}B_{1-}|1\rangle\negmedspace\langle1|\\
