\uwave off
\noun off
\color none

\begin_inset Formula $\left\langle \overline{H_{\bar{I}}}\right\rangle _{\overline{H_{\bar{S}}}\left(t\right)+\overline{H_{\bar{B}}}}=0$
\end_inset


\family default
\series default
