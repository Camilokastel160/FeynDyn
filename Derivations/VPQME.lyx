\begin_layout Section
The Hamiltonian
\end_layout

\begin_layout Standard
We start with a time-dependent Hamiltonian of the form: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
H(t) & =H_{S}(t)+H_{I}+H_{B},\label{Hamiltonian 2x2}\\
H_{S}(t) & =\varepsilon_{0}\left(t\right)|0\rangle\negmedspace\langle0|+\varepsilon_{1}\left(t\right)|1\rangle\negmedspace\langle1|+V_{10}\left(t\right)|1\rangle\negmedspace\langle0|+V_{01}\left(t\right)|0\rangle\negmedspace\langle1|,\label{System Hamiltonian 2x2}\\
H_{I} & =|0\rangle\negmedspace\langle0|\sum_{\mathbf{k}}\left(g_{0\mathbf{k}}b_{\mathbf{k}}^{\dagger}+g_{0\mathbf{k}}^{*}b_{\mathbf{k}}\right)+|1\rangle\negmedspace\langle1|\sum_{\mathbf{k}}\left(g_{1\mathbf{k}}b_{\mathbf{k}}^{\dagger}+g_{1\mathbf{k}}^{*}b_{\mathbf{k}}\right),\label{Interaction Hamiltonian 2x2}\\
H_{B} & =\sum_{\mathbf{k}}\omega_{\mathbf{k}}b_{\mathbf{k}}^{\dagger}b_{\mathbf{k}}^{\mathbf{}}.\label{Bath Hamiltonian 2x2}
\end{align}

\end_inset

For the states 
\begin_inset Formula $|0\rangle,|1\rangle$
\end_inset

 we have the ortonormal condition:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\langle i|j\rangle=\delta_{ij}\label{Ortonormal condition}
\end{equation}

\end_inset


\end_layout

\begin_layout Section
Unitary Transformation into the variationally optimizable frame
\end_layout

\begin_layout Standard
We will apply to 
\begin_inset Formula $H(t)$
\end_inset

, the unitary transformation defined by 
\begin_inset Formula $e^{\pm V}$
\end_inset

 where is the variationally optimizable anti-Hermitian operator:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
V\equiv|0\rangle\negmedspace\langle0|\sum_{\mathbf{k}}\left(\frac{v_{0\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{0\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}\right)+|1\rangle\negmedspace\langle1|\sum_{\mathbf{k}}\left(\frac{v_{1\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{1\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}\right)\label{Transformation operator 2x2}
\end{equation}

\end_inset

in terms of the variational scalar parameters 
\begin_inset Formula $v_{i\mathbf{k}}$
\end_inset

 defined as:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
v_{i\mathbf{k}}=\omega_{\mathbf{k}}\alpha_{i\mathbf{k}}\label{Variational parameters 2x2}
\end{equation}

\end_inset

which will soon be optimized in order to give the most accurate possible
 master equation for the system's dynamics in the presence of this bath.
 We define the following notation for the function 
\begin_inset Formula $\eqref{Transformation operator 2x2}$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\hat{\varphi_{i}} & \equiv\sum_{\mathbf{k}}\left(\frac{v_{i\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{i\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}\right),\label{Variational sum}\\
V & =|0\rangle\negmedspace\langle0|\hat{\varphi}_{0}+|1\rangle\negmedspace\langle1|\hat{\varphi}_{1}.\label{Variational operator}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Here 
\begin_inset Formula $*$
\end_inset

 denotes the complex conjugate.
 Expanding 
\begin_inset Formula $e^{\pm V}$
\end_inset

 using the notation 
\begin_inset Formula $\eqref{Transformation operator 2x2}$
\end_inset

will give us the following result:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
e^{\pm V} & =e^{\pm\left(|0\rangle\negmedspace\langle0|\hat{\varphi}_{0}+|1\rangle\negmedspace\langle1|\hat{\varphi}_{1}\right)}\\
 & =\mathbb{I}\pm\left(|0\rangle\negmedspace\langle0|\hat{\varphi}_{0}+|1\rangle\negmedspace\langle1|\hat{\varphi}_{1}\right)+\frac{\left(\pm\left(|0\rangle\negmedspace\langle0|\hat{\varphi}_{0}+|1\rangle\negmedspace\langle1|\hat{\varphi}_{1}\right)\right)^{2}}{2!}+...\\
 & =|0\rangle\negmedspace\langle0|+|1\rangle\negmedspace\langle1|\pm\left(|0\rangle\negmedspace\langle0|\hat{\varphi}_{0}+|1\rangle\negmedspace\langle1|\hat{\varphi}_{1}\right)+\frac{|0\rangle\negmedspace\langle0|\hat{\varphi}_{0}^{2}}{2!}+\frac{|1\rangle\negmedspace\langle1|\hat{\varphi}_{1}^{2}}{2!}+...\\
 & =|0\rangle\negmedspace\langle0|\left(1\pm\hat{\varphi}_{0}+\frac{\hat{\varphi}_{0}^{2}}{2!}\pm...\right)+|1\rangle\negmedspace\langle1|\left(1\pm\hat{\varphi_{1}}+\frac{\hat{\varphi}_{1}^{2}}{2!}\pm...\right)\\
 & =|0\rangle\negmedspace\langle0|e^{\pm\hat{\varphi}_{0}}+|1\rangle\negmedspace\langle1|e^{\pm\hat{\varphi}_{1}}\\
 & =|0\rangle\negmedspace\langle0|e^{\pm\sum_{\mathbf{k}}\left(\alpha_{0\mathbf{k}}b_{\mathbf{k}}^{\dagger}-\alpha_{0\mathbf{k}}^{*}b_{\mathbf{k}}\right)}+|1\rangle\negmedspace\langle1|e^{\pm\sum_{\mathbf{k}}\left(\alpha_{1\mathbf{k}}b_{\mathbf{k}}^{\dagger}-\alpha_{1\mathbf{k}}^{*}b_{\mathbf{k}}\right)}\\
 & =|0\rangle\negmedspace\langle0|B_{0\pm}+|1\rangle\negmedspace\langle1|B_{1\pm},\\
B_{i\pm} & \equiv e^{\pm\sum_{\mathbf{k}}\left(\frac{v_{i\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{i\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}\right)}.
\end{align}

\end_inset

Let's recall the Zassenhaus formula: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
e^{t(X+Y)} & {\displaystyle =e^{tX}~e^{tY}~e^{-\frac{t^{2}}{2}[X,Y]}~e^{\frac{t^{3}}{6}(2[Y,[X,Y]]+[X,[X,Y]])}~e^{\frac{-t^{4}}{24}([[[X,Y],X],X]+3[[[X,Y],X],Y]+3[[[X,Y],Y],Y])}\cdots}\label{Zassenhaus formula}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Since 
\begin_inset Formula $\left[\frac{v_{i\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{i\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}},\frac{v_{j\mathbf{k}{}^{\prime}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}{}^{\prime}}^{\dagger}-\frac{v_{j\mathbf{k}{}^{\prime}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}{}^{\prime}}\right]=0$
\end_inset

 for all 
\begin_inset Formula $\mathbf{k^{^{\prime}}},\mathbf{k}$
\end_inset

 and 
\begin_inset Formula $i,j$
\end_inset

 we can show making 
\begin_inset Formula $t=1$
\end_inset

 in 
\begin_inset Formula $\eqref{Zassenhaus formula}$
\end_inset

 the following result:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
e^{\left(\frac{v_{i\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{i\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}\right)+\left(\frac{v_{j\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{j\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}\right)} & =e^{\frac{v_{i\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{i\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}}e^{\frac{v_{j\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{j\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}}e^{-\frac{1}{2}\left[\frac{v_{i\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{i\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}},\frac{v_{j\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{j\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}\right]}\cdots\\
 & =e^{\frac{v_{i\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{i\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}}e^{\frac{v_{j\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{j\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}}e^{-\frac{1}{2}\,0}\cdots\\
 & =e^{\frac{v_{i\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{i\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}}e^{\frac{v_{j\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{j\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
By induction of this result we can write expresion of 
\begin_inset Formula $B_{i\pm}$
\end_inset

 as a product of exponentials, which we will call 
\begin_inset Quotes eld
\end_inset

displacement
\begin_inset Quotes erd
\end_inset

 operators 
\begin_inset Formula $D\left(\pm v{}_{i\mathbf{k}}\right)$
\end_inset

: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
B_{i\pm} & =\prod_{\mathbf{k}}D\left(\pm\frac{v_{i\mathbf{k}}}{\omega_{\mathbf{k}}}\right),\label{Definition B_pm}\\
D\left(\pm v_{i\mathbf{k}}\right) & \equiv e^{\pm\left(\frac{v_{i\mathbf{k}}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}^{\dagger}-\frac{v_{i\mathbf{k}}^{*}}{\omega_{\mathbf{k}}}b_{\mathbf{k}}\right)}.\label{Displacement operator}
\end{align}

\end_inset


\end_layout

